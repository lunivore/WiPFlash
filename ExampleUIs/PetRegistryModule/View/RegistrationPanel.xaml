<StackPanel x:Class="ExampleUIs.PetModule.View.RegistrationPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Orientation="Vertical">   
    <StackPanel.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/LabelledFieldStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </StackPanel.Resources>

    <StackPanel Orientation="Horizontal">
        <Label>Name:</Label>
        <TextBox Name="petNameInput"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <Label>Type:</Label>
        <ComboBox IsEditable="True" Name="petTypeInput" SelectedItem="{Binding Path=PetType}" ItemsSource="{Binding Path=PetTypes}" DisplayMemberPath="Name"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <Label>Eats:</Label>
        <ComboBox IsEditable="False" Name="petFoodInput" SelectedItem="{Binding Path=FoodType}" ItemsSource="{Binding Path=PetFoodTypes}" DisplayMemberPath="FoodType"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <Label>Price:</Label>
        <TextBox Name="petPriceInput" Text="{Binding Path=Name}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
        <Label>Rules:</Label>
        <ListBox Name="petRulesInput" ItemsSource="{Binding Path=Rules}" DisplayMemberPath="Name" />
    </StackPanel>
    <Button HorizontalAlignment="Right" Name="petSaveButton" Margin="10, 5, 10, 5">Save</Button>
</StackPanel>